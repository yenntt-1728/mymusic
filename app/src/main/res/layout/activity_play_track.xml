<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.example.mymusic.model.Track" />
        <variable
            name="listener"
            type="com.example.mymusic.screen.playtrack.PlayTrackActivity" />
    </data>

    <LinearLayout
        android:weightSum="2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_track"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_album_black_24dp"
                    android:layout_marginBottom="@dimen/dp_25"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_8"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:onClick="@{() -> listener.onClickButtonBack()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:text="@{viewModel.title}"/>

                <TextView
                    android:id="@+id/text_artist"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:text="@{viewModel.artist}"/>

                <LinearLayout
                    android:id="@+id/seek_bar"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_time_start"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        android:text="00:00"/>
                    <SeekBar
                        android:id="@+id/seekBar_duration"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="4"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/dp_25" />

                    <TextView
                        android:id="@+id/text_time_end"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginBottom="25dp"
                        android:textColor="@color/colorWhite"
                        android:text="@{viewModel.duration + ``}"
                        android:gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/play_controller"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_shuffle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="@drawable/ic_shuffle_black_24dp"
                        />

                    <ImageButton
                        android:id="@+id/button_previous"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_35"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_25"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:background="@drawable/ic_skip_previous_black_24dp" />

                    <ImageButton
                        android:id="@+id/button_state_change"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:background="@drawable/ic_pause_circle_filled_black_24dp" />

                    <ImageButton
                        android:id="@+id/button_next"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_35"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_25"
                        android:layout_marginEnd="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_40"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:background="@drawable/ic_next_black_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/image_loop"
                        app:layout_constraintTop_toBottomOf="@+id/seekBar_duration" />


                    <ImageView
                        android:id="@+id/image_loop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_40"
                        android:layout_marginBottom="@dimen/dp_35"
                        android:background="@drawable/ic_repeat_black_24dp" />


                </LinearLayout>
                <ImageView
                    android:id="@+id/image_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_120"
                    android:layout_marginLeft="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_artist" />

                <ImageView
                    android:id="@+id/image_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.475"
                    app:layout_constraintStart_toEndOf="@+id/image_download"
                    app:layout_constraintTop_toBottomOf="@+id/text_artist" />



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</layout>
